:root{
  --border-normal: #d3dae4;
  --border-subdued: #f0f4f9;

  --background-page: #ffffff;
  --background-normal: #f0f4f9;
  --background-normal-alt: #e4eaf1;
  --background-highlight: #f7f9fd;
  --background-subdued: #f7fafc;

  --foreground-normal: #4f5464;
  --foreground-normal-alt: #172940;
  --foreground-subdued: #a2b5cd;
  --foreground-inverted: #fff;

  --primary-light: #ddddff;
  --primary: #6644ff;
  --primary-dark: #4422dd;

  --secondary-light: #ffeeff;
  --secondary: #ff99dd;
  --secondary-dark: #ff77bb;

  --success-light: #e6faf5;
  --success: #00c897;
  --success-dark: #0ca582;

  --warning-light: #fff7e6;
  --warning: #ffb300;
  --warning-dark: #cb9511;

  --danger-light: #fceef0;
  --danger: #e35169;
  --danger-dark: #b64c60;

}



